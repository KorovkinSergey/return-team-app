{
  "compilerOptions": {
    "lib": [
      "es2020",
      "dom"
    ],
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules"
  ]
}
